{
  "name": "@checkdigit/retry",
  "version": "1.0.0",
  "description": "Implementation of the standard Check Digit retry algorithm",
  "typings": "./dist/index.d.ts",
  "main": "./dist/index.js",
  "prettier": "@checkdigit/prettier-config",
  "engines": {
    "node": ">=14"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/checkdigit/retry.git"
  },
  "author": "Check Digit, LLC",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/checkdigit/retry/issues"
  },
  "homepage": "https://github.com/checkdigit/retry#readme",
  "dependencies": {
    "debug": "^4.3.1"
  },
  "devDependencies": {
    "@checkdigit/eslint-config": "^3.4.0",
    "@checkdigit/prettier-config": "^1.0.1",
    "@checkdigit/publish": "^1.0.18",
    "@checkdigit/typescript-config": "1.0.5",
    "@types/debug": "^4.1.5",
    "@types/jest": "^26.0.20",
    "eslint": "^7.21.0",
    "jest": "^26.6.3",
    "prettier": "^2.2.1",
    "rimraf": "^3.0.2",
    "ts-jest": "^26.5.2",
    "ts-node": "^9.1.1",
    "typescript": "^4.2.2"
  },
  "jest": {
    "collectCoverage": true,
    "preset": "ts-jest",
    "testPathIgnorePatterns": [
      "<rootDir>/build/",
      "<rootDir>/coverage",
      "<rootDir>/node_modules/"
    ]
  },
  "scripts": {
    "prepublishOnly": "publish",
    "postpublish": "rimraf dist .npmignore",
    "preversion": "npm test",
    "postversion": "git push && git push --tags",
    "lint": "eslint -f unix 'src/**/*.ts'",
    "lint:fix": "eslint -f unix 'src/**/*.ts' --fix",
    "prettier": "prettier --list-different 'src/**/*.ts'",
    "prettier:fix": "prettier --write 'src/**/*.ts'",
    "test": "tsc && jest && npm run lint && npm run prettier"
  }
}
