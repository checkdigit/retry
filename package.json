{
  "name": "@checkdigit/retry",
  "version": "3.0.0",
  "description": "Implementation of the standard Check Digit retry algorithm",
  "typings": "./dist/index.d.ts",
  "main": "./dist/index.js",
  "prettier": "@checkdigit/prettier-config",
  "engines": {
    "node": ">=16"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/checkdigit/retry.git"
  },
  "author": "Check Digit, LLC",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/checkdigit/retry/issues"
  },
  "homepage": "https://github.com/checkdigit/retry#readme",
  "dependencies": {
    "debug": "^4.3.4"
  },
  "devDependencies": {
    "@checkdigit/eslint-config": "^7.0.0",
    "@checkdigit/prettier-config": "^2.1.0",
    "@checkdigit/typescript-config": "3.0.1",
    "@types/debug": "^4.1.7",
    "@types/jest": "^28.1.6",
    "jest": "^28.1.3",
    "rimraf": "^3.0.2",
    "ts-jest": "^28.0.7",
    "ts-node": "^10.9.1"
  },
  "jest": {
    "preset": "ts-jest",
    "collectCoverageFrom": [
      "<rootDir>/src/**",
      "!<rootDir>/src/**/*.spec.ts",
      "!<rootDir>/src/**/*.test.ts"
    ],
    "globals": {
      "ts-jest": {
        "isolatedModules": true,
        "diagnostics": false
      }
    },
    "testMatch": [
      "<rootDir>/src/**/*.spec.ts"
    ]
  },
  "scripts": {
    "preversion": "npm test",
    "postversion": "git push && git push --tags",
    "lint": "eslint -f unix 'src/**/*.ts'",
    "lint:fix": "eslint -f unix 'src/**/*.ts' --fix",
    "prettier": "prettier --list-different 'src/**/*.ts'",
    "prettier:fix": "prettier --write 'src/**/*.ts'",
    "test": "npm run ci:compile && npm run ci:test && npm run ci:lint && npm run ci:style",
    "ci:compile": "tsc --noEmit",
    "ci:test": "jest --coverage=false",
    "ci:coverage": "jest --coverage=true",
    "ci:lint": "npm run lint",
    "ci:style": "npm run prettier"
  }
}
